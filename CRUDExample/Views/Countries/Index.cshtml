@model int
@{
    ViewBag.Title = "Upload Countries from Excel";
}

<h2>Upload Countries from Excel</h2>
@if(Model > 0)
{
    <div class="alert alert-success">
        <strong>@Model</strong> countries have been uploaded successfully.
    </div>
}
<div class="w-50">
    <form asp-action="UploadFromExcel" asp-controller="Countries" enctype="multipart/form-data" method="post">
        
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt">Choose an xlsx file</label>
            </div>
            <div class="flex-1">
                <input type="file" name="formFile" class="form-input" />
                <div class="text-red">@ViewBag.ErrorMessage</div>
            </div>
        </div>   
        
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button type="submit" class="button button-green-back">Upload</button>
            </div>
        </div>
    </form>
</div>